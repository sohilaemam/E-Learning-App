<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upper_line"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"
        />

    <TextView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upper_line"
        />
    <TextView
        android:id="@+id/questions_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Questions"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upper_line"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/back_arrow"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_design"
        app:layout_constraintTop_toBottomOf="@id/question"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:hint="Enter the question"
        android:paddingStart="10dp"
        />
    <TextView
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/question_text"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/answer1_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_design"
        app:layout_constraintTop_toBottomOf="@id/answer1"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:hint="Enter the first answer"
        android:paddingStart="10dp"
        />
    <TextView
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/answer1_text"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/answer2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_design"
        app:layout_constraintTop_toBottomOf="@id/answer2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:hint="Enter the second answer"
        android:paddingStart="10dp"
        />
    <TextView
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/answer2_text"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/answer3_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_design"
        app:layout_constraintTop_toBottomOf="@id/answer3"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:hint="Enter the third answer"
        android:paddingStart="10dp"
        />
    <TextView
        android:id="@+id/answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/answer3_text"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/answer4_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_design"
        app:layout_constraintTop_toBottomOf="@id/answer4"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:hint="Enter the forth answer"
        android:paddingStart="10dp"
        />
    <TextView
        android:id="@+id/correct_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correct Answer"
        android:textStyle="italic"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/answer4_text"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"/>
    <CheckBox
        android:id="@+id/correct_answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/correct_answer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:text="A"
        />
    <CheckBox
        android:id="@+id/correct_answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/correct_answer"
        app:layout_constraintStart_toEndOf="@id/correct_answer1"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:text="B"
        />
    <CheckBox
        android:id="@+id/correct_answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/correct_answer"
        app:layout_constraintStart_toEndOf="@id/correct_answer2"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:text="C"
        />
    <CheckBox
        android:id="@+id/correct_answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/correct_answer"
        app:layout_constraintStart_toEndOf="@id/correct_answer3"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingStart="8dp"
        android:text="D"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="10dp"
        app:layout_constraintWidth_percent="0.4"
        android:background="@drawable/next_button"
        app:backgroundTint="#0A32B2"
        android:textSize="20sp"
        android:textStyle="bold"
         />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintWidth_percent="0.4"
        android:background="@drawable/next_button"
        app:backgroundTint="#0A32B2"
        android:textSize="20sp"
        android:textStyle="bold"
        />
</androidx.constraintlayout.widget.ConstraintLayout>