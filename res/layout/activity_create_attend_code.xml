<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upper_line"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"
        />

    <TextView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upper_line"
        />
    <TextView
        android:id="@+id/attend_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Attendance"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/back_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upper_line"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/attend_code_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attend Code"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/back_arrow"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/attend_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_design"
        app:layout_constraintTop_toBottomOf="@id/attend_code_word"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintWidth_percent="0.7"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_attend"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="10dp"
        app:cardElevation="9dp"
        app:layout_constraintStart_toEndOf="@id/attend_text"
        app:layout_constraintTop_toTopOf="@id/attend_text"
        app:layout_constraintBottom_toBottomOf="@id/attend_text"
        app:layout_constraintTop_toBottomOf="@id/upper_line">

        <ImageView
            android:id="@+id/copy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/copy" />
    </androidx.cardview.widget.CardView>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/generate_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/generate_button"
        android:layout_marginHorizontal="20dp"
        app:backgroundTint="#0A32B2"
        android:text="Generate"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/attend_text"
        android:layout_marginTop="60dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Generate first to generate automatic random code"
        android:textColor="#0A32B2"
        app:layout_constraintStart_toStartOf="@id/generate_code"
        app:layout_constraintEnd_toEndOf="@id/generate_code"
        app:layout_constraintTop_toBottomOf="@id/generate_code"
        android:layout_marginTop="5dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/generate_button"
        android:layout_marginHorizontal="20dp"
        app:backgroundTint="#0A32B2"
        android:text="Confirm"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>