<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#106FF3"
    >
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="#106FF3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/word1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/firstStep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/word2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/word1"
        android:text="@string/withUs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/container"
        android:layout_width="401dp"
        android:layout_height="460dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/text_boxes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word2" />
    <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_boxes"
            android:layout_marginHorizontal="10dp"
            android:hint="Name"
            android:paddingStart="40dp"
            android:inputType="textPersonName"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/word2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="280dp"
        />
    <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_boxes"
            android:layout_marginHorizontal="10dp"
            android:hint="@string/email"
            android:paddingStart="40dp"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/edit_text_name"
            android:layout_marginTop="10dp" />
    <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_boxes"
            android:layout_marginHorizontal="10dp"
            android:hint="@string/password"
            android:paddingStart="40dp"
            android:inputType="textPassword"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/edit_text_email"
            android:layout_marginTop="10dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_email_24"
        app:layout_constraintStart_toStartOf="@id/edit_text_email"
        app:layout_constraintTop_toTopOf="@id/edit_text_email"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_email"
        android:paddingStart="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_lock_person_24"
        app:layout_constraintStart_toStartOf="@id/edit_text_password"
        app:layout_constraintTop_toTopOf="@id/edit_text_password"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_password"
        android:paddingStart="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_face_24"
        app:layout_constraintStart_toStartOf="@id/edit_text_name"
        app:layout_constraintTop_toTopOf="@id/edit_text_name"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_name"
        android:paddingStart="10dp"
        />
    <TextView
        android:id="@+id/show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_remove_red_eye_24"
        app:layout_constraintTop_toTopOf="@id/edit_text_password"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_password"
        app:layout_constraintEnd_toEndOf="@id/edit_text_password"
        android:layout_marginEnd="10dp"
        />
    <Button
        android:id="@+id/btn_create_account"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_blue"
        app:backgroundTint="#106FF3"
        app:layout_constraintStart_toStartOf="@id/edit_text_password"
        app:layout_constraintEnd_toEndOf="@id/edit_text_password"
        app:layout_constraintTop_toBottomOf="@id/edit_text_password"
        android:text="@string/createAccount"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>