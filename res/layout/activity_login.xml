<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="#106FF3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/upper_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.07"
        android:orientation="horizontal"
        />

    <ImageView
        android:id="@+id/splash_img"
        android:layout_width="183dp"
        android:layout_height="189dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_splash_hero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/upper_line" />
    <TextView
        android:id="@+id/Already_have_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/splash_img"
        app:layout_constraintBottom_toBottomOf="@id/splash_img"
        app:layout_constraintEnd_toStartOf="@id/splash_img"
        android:layout_marginEnd="45dp"
        android:text="Already \nhave an \nAccount?"
        android:textColor="@color/darkTextColor"
        android:textSize="25dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_design"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/splash_img"
        android:layout_marginTop="25dp"
        android:hint="@string/email"
        android:paddingStart="40dp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        tools:text=""
        />
    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_design"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_email"
        android:layout_marginTop="25dp"
        android:hint="@string/password"
        android:paddingStart="40dp"
        android:maxLines="1"
        android:inputType="textPassword"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/edit_text_password"
        app:layout_constraintTop_toBottomOf="@id/edit_text_password"
        android:layout_marginTop="10dp"
        android:paddingRight="20dp"
        android:padding="5dp"
        android:text="@string/forgot_password"
        android:textColor="#004AB1"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_blue"
        app:backgroundTint="#106FF3"
        app:layout_constraintTop_toBottomOf="@id/forget_password"
        app:layout_constraintStart_toStartOf="@id/edit_text_password"
        app:layout_constraintEnd_toEndOf="@id/edit_text_password"
        android:text="@string/login"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/go_to_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:paddingRight="20dp"
        android:padding="5dp"
        android:text="@string/new_user_register_now"
        android:textColor="#004AB1"
        android:textSize="17sp"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_email_24"
        app:layout_constraintStart_toStartOf="@id/edit_text_email"
        app:layout_constraintTop_toTopOf="@id/edit_text_email"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_email"
        android:paddingStart="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_lock_person_24"
        app:layout_constraintStart_toStartOf="@id/edit_text_password"
        app:layout_constraintTop_toTopOf="@id/edit_text_password"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_password"
        android:paddingStart="10dp"
        />
    <TextView
        android:id="@+id/show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_remove_red_eye_24"
        app:layout_constraintTop_toTopOf="@id/edit_text_password"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_password"
        app:layout_constraintEnd_toEndOf="@id/edit_text_password"
        android:layout_marginEnd="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>