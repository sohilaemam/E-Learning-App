<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="10dp"
    android:background="@color/snow"
    >

    <TextView
        android:id="@+id/student_id_label"
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Student ID:- "
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/student_id"
        android:layout_width="0dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@id/student_id_label"
        app:layout_constraintStart_toEndOf="@id/student_id_label"
        android:textStyle="bold"
        tools:text="-ebhkebewjrb"
        android:textColor="#0A32B2"
        />
    <TextView
        android:id="@+id/attend"
        android:layout_width="0dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/student_id_label"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="italic"
        android:text="Attendance Grades:- "
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/attend_grade"
        android:layout_width="0dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/student_id_label"
        app:layout_constraintStart_toEndOf="@id/attend"
        android:textStyle="bold"
        tools:text="15"
        android:textColor="#0A32B2"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/quiz"
        android:layout_width="0dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/attend"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="italic"
        android:text="Quiz Grades:- "
        />
    <TextView
        android:id="@+id/quiz_grade"
        android:layout_width="0dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/attend"
        app:layout_constraintStart_toEndOf="@id/quiz"
        android:textStyle="bold"
        tools:text="15"
        android:textColor="#0A32B2"
        />
    <TextView
        android:id="@+id/project"
        android:layout_width="0dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/quiz"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="italic"
        android:text="Project Grades:- "
        />
    <TextView
        android:id="@+id/not_assigned"
        android:layout_width="0dp"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/quiz"
        app:layout_constraintStart_toEndOf="@id/project"
        android:textStyle="bold"
        android:text="Not assigned"
        android:textColor="#0A32B2"
        />

</androidx.constraintlayout.widget.ConstraintLayout>